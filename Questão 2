#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int charToInt(char c)
{
    switch(c)
    {
        case ' ': return 0 ;
        case 'a': return 1; 
        case 'b': return 2; 
        case 'c': return 3; 
        case 'd': return 4; 
        case 'e': return 5; 
        case 'f': return 6; 
        case 'g': return 7; 
        case 'h': return 8; 
        case 'i': return 9; 
        case 'j': return 10; 
        case 'k': return 11; 
        case 'l': return 12; 
        case 'm': return 13; 
        case 'n': return 14; 
        case 'o': return 15; 
        case 'p': return 16; 
        case 'q': return 17; 
        case 'r': return 18; 
        case 's': return 19; 
        case 't': return 20; 
        case 'u': return 21; 
        case 'v': return 22; 
        case 'w': return 23; 
        case 'x': return 24; 
        case 'y': return 25; 
        case 'z': return 26;
    }
}

void main()
{
    char text[20];
    char auxiliar;
    
    printf("Escreva a palavra com atÃ© 20 caracteres.\n");
    scanf("%s", &text);
    
    for (int i = 1; i < strlen(text); i++)
    {
        for (int j = 0; j < strlen(text) - 1; j++)
        {
            if (charToInt(text[j]) > charToInt(text[j + 1]))
            {
                auxiliar = text[j];
                text[j] = text[j + 1];
                text[j + 1] = auxiliar;
            }
        }
    }
    
     printf("A palavra ordenada ficarÃ¡:");
    for (int i = 0; i < strlen(text); i++)
    {   
        printf("%c", text[i]);
    }
}
